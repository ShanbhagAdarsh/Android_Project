<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="134dp"
        android:layout_height="129dp"
        android:orientation="horizontal"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.159"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="107dp"
            android:layout_height="101dp"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:foregroundGravity="center"
            app:cardCornerRadius="20dp"
            app:cardElevation="16dp">

            <ImageView
                android:id="@+id/profilepic"
                android:layout_width="106dp"
                android:layout_height="101dp"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/sFN"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_input"
        android:gravity="bottom"
        android:padding="10dp"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textColor="#0B0A0A"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toEndOf="@+id/linearLayout5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.157"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/sPhno"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_input"
        android:gravity="bottom"
        android:padding="10dp"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textColor="#0B0A0A"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toEndOf="@+id/linearLayout5"
        app:layout_constraintTop_toBottomOf="@+id/sFN"
        app:layout_constraintVertical_bias="0.034"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/sAdd"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_input"
        android:gravity="bottom"
        android:textAlignment="textStart"
        android:textColor="#0B0A0A"
        android:padding="10dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sOcc"
        app:layout_constraintTop_toBottomOf="@+id/sOcc"
        app:layout_constraintVertical_bias="0.057"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/sOcc"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="392dp"
        android:background="@drawable/custom_input"
        android:gravity="bottom"
        android:padding="10dp"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textColor="#0B0A0A"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        app:layout_constraintVertical_bias="0.931"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/logoutbut"
        android:layout_width="154dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:text="Logout"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/button_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="@+id/Contact"
        app:layout_constraintTop_toBottomOf="@+id/Contact"
        app:layout_constraintVertical_bias="0.567" />

    <TextView
        android:id="@+id/abt"
        android:layout_width="135dp"
        android:layout_height="47dp"
        android:drawableEnd="@drawable/ic_info"
        android:drawableRight="@drawable/ic_info"
        android:gravity="center"
        android:text="About us"
        android:textAlignment="textStart"
        android:textColor="#040303"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sAdd"
        app:layout_constraintTop_toBottomOf="@+id/sAdd"
        app:layout_constraintVertical_bias="0.145"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/Contact"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:drawableEnd="@drawable/ic_info"
        android:gravity="center"
        android:text="Contact us"
        android:textAlignment="textStart"
        android:textColor="#040303"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/abt"
        app:layout_constraintTop_toBottomOf="@+id/abt"
        app:layout_constraintVertical_bias="0.078"
        tools:ignore="RtlCompat" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/fragmenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        app:menu="@menu/navigation_drawer"
        app:headerLayout="@layout/draw_header"
        app:itemTextAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="start"/>

</androidx.drawerlayout.widget.DrawerLayout>