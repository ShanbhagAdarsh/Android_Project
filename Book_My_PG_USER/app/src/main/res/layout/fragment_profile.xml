<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:elevation="4dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:titleMarginStart="145dp"
        app:title="Book My PG"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        tools:ignore="MissingConstraints">

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="353dp"
        android:layout_height="615dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/background_shape"

        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.784">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="107dp"
                    android:layout_height="101dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="16dp"
                    android:foregroundGravity="center"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="16dp">

                    <ImageView
                        android:id="@+id/profilepic"
                        android:layout_width="106dp"
                        android:layout_height="101dp"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:id="@+id/dFN"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_person_p"
                android:drawableLeft="@drawable/ic_person_p"
                android:gravity="bottom"
                android:padding="10dp"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="#0B0A0A"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.144"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/dDOB"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_calendar_p"
                android:drawableLeft="@drawable/ic_calendar_p"
                android:gravity="bottom"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:textColor="#0B0A0A"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/dAge"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#0B0A0A"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.239"
                app:layout_constraintStart_toEndOf="@+id/dDOB"
                app:layout_constraintTop_toBottomOf="@+id/dFN"
                app:layout_constraintVertical_bias="0.047"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/dGen"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_face_p"
                android:drawableLeft="@drawable/ic_face_p"
                android:gravity="bottom"
                android:padding="10dp"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:textColor="#0B0A0A"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/dDOB"
                app:layout_constraintTop_toBottomOf="@+id/dDOB"
                app:layout_constraintVertical_bias="0.058"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/dPhno"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_phone_p"
                android:drawableLeft="@drawable/ic_phone_p"
                android:gravity="bottom"
                android:padding="10dp"
                android:textAlignment="textStart"
                android:textColor="#0B0A0A"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/dGen"
                app:layout_constraintTop_toBottomOf="@+id/dGen"
                app:layout_constraintVertical_bias="0.067"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/dOcc"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_work_p"
                android:drawableLeft="@drawable/ic_work_p"
                android:gravity="bottom"
                android:padding="10dp"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:textColor="#0B0A0A"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/dPhno"
                app:layout_constraintTop_toBottomOf="@+id/dPhno"
                app:layout_constraintVertical_bias="0.078"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/dAdd"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_home_p"
                android:drawableLeft="@drawable/ic_home_p"
                android:gravity="bottom"
                android:padding="10dp"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:textColor="#0B0A0A"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/dOcc"
                app:layout_constraintTop_toBottomOf="@+id/dOcc"
                app:layout_constraintVertical_bias="0.124"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/dCity"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_location"
                android:drawableLeft="@drawable/ic_location"
                android:gravity="bottom"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:textColor="#0B0A0A"
                android:textSize="22dp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />


            <Button
                android:id="@+id/editbutton"
                android:layout_width="158dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_shape"
                android:text="Edit Profile"
                android:textColor="#0B0A0A"
                android:textStyle="bold"
                app:backgroundTint="#F489A2"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.464"
                app:layout_constraintStart_toStartOf="@+id/dCity"
                app:layout_constraintTop_toBottomOf="@+id/dCity"
                app:layout_constraintVertical_bias="0.412"
                android:layout_marginLeft="10dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>