<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomDetails"
    android:id="@+id/roomDet"
    android:background="@drawable/recycle">

    <androidx.appcompat.widget.Toolbar
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:elevation="4dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:titleMarginStart="145dp"
        app:title="Book My PG"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:id="@+id/main_toolbar"
        tools:ignore="MissingConstraints">

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Room Details"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider"
        app:layout_constraintVertical_bias="0.0" />

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/slider"
        android:layout_width="412dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="336dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_toolbar"
        app:layout_constraintVertical_bias="0.0"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorEnabled="true"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="#5A5A5A"
        app:sliderIndicatorUnselectedColor="#FFF"
        app:sliderScrollTimeInSec="1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/pgRoomNo"
        android:layout_width="148dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_pgname"
        android:drawableLeft="@drawable/ic_pgname"
        android:gravity="bottom"
        android:padding="10dp"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="#0B0A0A"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.02"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/pgRoomType"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_bed_type"
        android:drawableLeft="@drawable/ic_bed_type"
        android:gravity="bottom"
        android:padding="10dp"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="#0B0A0A"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pgRoomNo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pgRoomNo"
        app:layout_constraintTop_toBottomOf="@+id/pgRoomNo"
        app:layout_constraintVertical_bias="0.02"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/pgRoomDet"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_room_preferences"
        android:drawableLeft="@drawable/ic_room_preferences"
        android:gravity="bottom"
        android:padding="10dp"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="#0B0A0A"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pgRoomType"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pgRoomType"
        app:layout_constraintTop_toBottomOf="@+id/pgRoomType"
        app:layout_constraintVertical_bias="0.028"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/depo"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_money_24"
        android:drawableLeft="@drawable/ic_baseline_money_24"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Deposit"
        android:textAlignment="center"
        android:textColor="#0B0A0A"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pgRoomDet"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pgRoomDet"
        app:layout_constraintTop_toBottomOf="@+id/pgRoomDet"
        app:layout_constraintVertical_bias="0.053"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/pgRoomDepo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_input"
        android:gravity="bottom"
        android:padding="10dp"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="#0B0A0A"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toEndOf="@+id/depo"
        app:layout_constraintTop_toBottomOf="@+id/pgRoomDet"
        app:layout_constraintVertical_bias="0.053"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/Final"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_money_24"
        android:drawableLeft="@drawable/ic_baseline_money_24"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Rent"
        android:textAlignment="center"
        android:textColor="#0B0A0A"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/depo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/depo"
        app:layout_constraintTop_toBottomOf="@+id/depo"
        app:layout_constraintVertical_bias="0.074"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/pgRoomAmt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_input"
        android:gravity="bottom"
        android:padding="10dp"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="#0B0A0A"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toEndOf="@+id/Final"
        app:layout_constraintTop_toBottomOf="@+id/pgRoomDepo"
        app:layout_constraintVertical_bias="0.074"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/book"
        android:layout_width="157dp"
        android:layout_height="48dp"
        android:backgroundTint="#4489BF"
        android:text="Book PG"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pgRoomAmt"
        app:layout_constraintHorizontal_bias="0.641"
        app:layout_constraintStart_toStartOf="@+id/Final"
        app:layout_constraintTop_toBottomOf="@+id/Final"
        app:layout_constraintVertical_bias="0.379" />

</androidx.constraintlayout.widget.ConstraintLayout>